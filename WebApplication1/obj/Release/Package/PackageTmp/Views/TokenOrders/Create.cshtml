@model WebApplication1.TokenOrder
@using WebApplication1.Settings;

@{
    ViewBag.Title = "Buy";
}

<h2>Buy tokens</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
        <h4>TokenOrder</h4>

        <hr />
        
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        
        
        <div class="form-group">
            @Html.LabelFor(model => model.NumTokens, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select name="NumTokens">
                    <option value="@GlobalSettings.S">Silver</option>
                    <option value="@GlobalSettings.G">Gold</option>
                    <option value="@GlobalSettings.P">Platinum</option>
                </select>
                @Html.ValidationMessageFor(model => model.NumTokens, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Buy" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
